{
  "name": "reading-speed-trainer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "budget": "node scripts/check-bundle-budget.mjs",
    "test:migrations": "node scripts/check-db-migrations.mjs",
    "ci": "npm run lint && npm run build && npm run budget && npm run test:migrations && npm run test:unit",
    "test:unit": "rm -rf .tmp/tests && tsc -p tsconfig.tests.json && node --experimental-specifier-resolution=node --test .tmp/tests/tests/unit/*.test.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "idb": "^8.0.3",
    "jszip": "^3.10.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "vite-plugin-pwa": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
